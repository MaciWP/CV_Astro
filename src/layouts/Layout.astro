---
// Import the required components
import { ThemeProvider } from '../contexts/ThemeContext';
import Navbar from '../components/Navbar';

// Define props interface
export interface Props {
  title: string;
  description: string;
  lang: string;
}

// Destructure props with defaults
const { 
  title = "Oriol Macias - CV", 
  description = "Professional CV for Oriol Macias, Software Developer",
  lang = "en"
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#ffffff" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Font Awesome for icons (loaded from CDN) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Set initial theme class -->
    <script is:inline>
      // Get initial theme from localStorage or default to light
      function getInitialTheme() {
        if (localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        // Default to light theme instead of checking system preference
        return 'light';
      }
      
      // Apply theme class to html element
      document.documentElement.classList.add(getInitialTheme());
    </script>
  </head>
  <body class="min-h-screen bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 font-sans transition-colors duration-300">
    <ThemeProvider client:load>
      <div id="app-root">
        <Navbar client:load />

        <main class="container mx-auto px-4 py-8 max-w-5xl">
          <slot />
        </main>

        <footer class="py-8 border-t border-gray-100 dark:border-gray-800 bg-gray-50 dark:bg-gray-900 transition-colors duration-300">
          <div class="container mx-auto px-4 max-w-5xl">
            <div class="flex flex-col md:flex-row justify-between items-center gap-4">
              <div class="flex items-center gap-2">
                <div class="h-6 w-6 bg-brand-red dark:bg-brand-red rounded-none flex items-center justify-center transition-colors duration-300">
                  <span class="text-white font-bold text-xs">OM</span>
                </div>
                <p class="text-sm text-gray-600 dark:text-gray-400 transition-colors duration-300">
                  Â© {new Date().getFullYear()} Oriol Macias
                </p>
              </div>

              <div class="flex gap-6">
                <a
                  href="#top"
                  class="text-sm text-gray-600 dark:text-gray-400 hover:text-brand-red dark:hover:text-brand-red transition-colors"
                >
                  Back to top
                </a>
                <button 
                  class="text-xs h-8 px-3 py-1 border border-brand-red dark:border-brand-red text-brand-red dark:text-brand-red hover:bg-brand-red hover:text-white dark:hover:bg-brand-red dark:hover:text-white transition-colors duration-300"
                  onclick="document.getElementById('cv-download-button')?.click()"
                >
                  <i class="fas fa-download mr-2"></i>
                  Download CV
                </button>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </ThemeProvider>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>