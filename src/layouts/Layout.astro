    <!-- Fixed Structured Data with proper typing -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(structuredData, null, 2)}
    />

    <!-- JobPosting Structured Data - Separate component for Google compliance -->
    <JobPostingSchema
      market={marketData.market as "switzerland" | "spain" | "general"}
      city={marketData.city}
      language={lang as "en" | "es" | "fr"}
      client:load
