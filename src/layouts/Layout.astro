---
// Import the required components
import { ThemeProvider } from '../contexts/ThemeContext';
import Navbar from '../components/Navbar';

// Define props interface
export interface Props {
  title: string;
  description: string;
  lang: string;
}

// Destructure props with defaults
const { 
  title = "Oriol Macias - CV", 
  description = "Professional CV for Oriol Macias, Software Developer",
  lang = "en"
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <!-- PWA Meta Tags -->
    <meta name="theme-color" content="#ffffff" />
    <link rel="manifest" href="/manifest.json" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    
    <!-- Font Awesome for icons (loaded from CDN) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Set initial theme class -->
    <script is:inline>
      // Get initial theme from localStorage or default to light
      function getInitialTheme() {
        if (localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        // Default to light theme instead of checking system preference
        return 'light';
      }
      
      // Apply theme class to html element
      document.documentElement.classList.add(getInitialTheme());
    </script>
  </head>
  <body class="min-h-screen bg-light-primary dark:bg-dark-primary text-light-text dark:text-dark-text transition-colors duration-300">
    <ThemeProvider client:load>
      <div id="app-root">
        <Navbar client:load />

        <main class="container mx-auto px-4 py-8 max-w-5xl">
          <slot />
        </main>

        <footer class="py-6 mt-16 border-t border-light-border dark:border-dark-border">
          <div class="container mx-auto px-4 max-w-5xl flex justify-between items-center">
            <div class="flex items-center space-x-2">
              <div class="w-8 h-8 flex items-center justify-center bg-brand-red text-white font-bold rounded-none">
                OM
              </div>
              <p class="text-sm">Â© 2025 Oriol Macias</p>
            </div>
            <div class="flex space-x-3">
              <a href="#top" class="text-sm flex items-center space-x-1 hover:text-brand-red transition-colors">
                <span>Back to top</span>
                <i class="fas fa-arrow-up text-xs"></i>
              </a>
              <a 
                href="#" 
                class="inline-flex items-center px-3 py-1.5 text-sm text-white bg-brand-red rounded-none hover:bg-opacity-90 transition-opacity"
              >
                <i class="fas fa-download mr-1.5"></i>
                <span>Download CV</span>
              </a>
            </div>
          </div>
        </footer>
      </div>
    </ThemeProvider>
  </body>
</html>

<style is:global>
  /* Global styles - loaded from src/styles/global.css */
  @import "../styles/global.css";
</style>