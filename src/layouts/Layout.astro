    <meta property="og:site_name" content="Oriol Macias Dev" />
    {lang === "es" && <meta property="og:locale:alternate" content="es_ES" />}
    {lang === "fr" && <meta property="og:locale:alternate" content="fr_FR" />}

    <!-- Twitter Card optimization -->
