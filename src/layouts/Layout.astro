    <!-- Performance optimizations -->
    <meta name="generator" content={Astro.generator} />
    <link
      rel="preload"
      href="/styles/fonts/fa-solid-900.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
