---
/**
 * Página principal Switzerland
 * @file src/pages/switzerland/index.astro
 * @description Landing page para todo el mercado suizo
 */
import Layout from "../../layouts/Layout.astro";
import ProfileHeader from "../../components/cv/ProfileHeader";
import Experience from "../../components/cv/Experience";
import Skills from "../../components/cv/Skills";

const title = "Oriol Macias - Backend Developer Switzerland | Work Permit Ready";
const description = "Senior Backend Developer seeking opportunities across Switzerland. 8+ years Python, Django, industrial protocols. EU work permit ready for immediate hire.";
---

<Layout title={title} description={description}>
  <div class="max-w-4xl mx-auto">
    <!-- Swiss Market Hero Section -->
    <section class="mb-16 text-center">
      <h1 class="text-4xl font-bold mb-4 text-brand-red">
        Backend Developer for Switzerland
      </h1>
      <p class="text-xl mb-6 text-gray-700 dark:text-gray-300">
        Senior Software Developer with EU work permit ready for Swiss companies
      </p>
      <div class="flex justify-center gap-4 mb-8">
        <span class="px-4 py-2 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200 rounded">
          ✅ Work Permit Ready
        </span>
        <span class="px-4 py-2 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 rounded">
          🇪🇺 EU Citizen
        </span>
        <span class="px-4 py-2 bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200 rounded">
          🔄 Immediate Availability
        </span>
      </div>
    </section>

    <!-- Swiss Cities Focus -->
    <section class="mb-16">
      <h2 class="text-2xl font-bold mb-8 text-center">Target Swiss Markets</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Zurich -->
        <a href="/switzerland/zurich" class="block p-6 border rounded-lg hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2 text-brand-red">Zurich</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Fintech & Banking Hub</p>
          <ul class="text-sm">
            <li>• ETH Zurich collaboration</li>
            <li>• Google Switzerland</li>
            <li>• Financial sector focus</li>
          </ul>
        </a>

        <!-- Basel -->
        <a href="/switzerland/basel" class="block p-6 border rounded-lg hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2 text-brand-red">Basel</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Pharmaceutical & Manufacturing</p>
          <ul class="text-sm">
            <li>• Roche & Novartis</li>
            <li>• Industrial automation</li>
            <li>• Protocol expertise</li>
          </ul>
        </a>

        <!-- Geneva -->
        <a href="/switzerland/geneva" class="block p-6 border rounded-lg hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2 text-brand-red">Geneva</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">International Organizations</p>
          <ul class="text-sm">
            <li>• CERN collaboration</li>
            <li>• UN tech systems</li>
            <li>• Multilingual advantage</li>
          </ul>
        </a>

        <!-- Lausanne -->
        <a href="/switzerland/lausanne" class="block p-6 border rounded-lg hover:shadow-lg transition-shadow">
          <h3 class="text-xl font-semibold mb-2 text-brand-red">Lausanne</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">EPFL Tech Ecosystem</p>
          <ul class="text-sm">
            <li>• Research collaboration</li>
            <li>• Startup ecosystem</li>
            <li>• Academic partnerships</li>
          </ul>
        </a>
      </div>
    </section>

    <!-- Standard CV Sections -->
    <ProfileHeader client:load />
    <Experience client:visible />
    <Skills client:visible />
  </div>
</Layout>

