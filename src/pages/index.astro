---
import Layout from '../layouts/Layout.astro';

// Importamos el componente Header simplificado
import Header from '../components/cv/Header';
import Experience from '../components/cv/Experience';
import Skills from '../components/cv/Skills';
import Languages from '../components/cv/Languages';
import Education from '../components/cv/Education';
import Projects from '../components/cv/Projects';

// Metadata de la página
const pageTitle = "Oriol Macias - CV";
const pageDescription = "Professional CV for Oriol Macias, Software Developer";
---

<Layout title={pageTitle} description={pageDescription}>
  <div id="cv-content" class="space-y-16">
    <!-- IMPORTANTE: cambiamos client:load para asegurar que se hidrate completamente -->
    <Header client:load />
    
    <!-- El resto de secciones con client:visible -->
    <Experience client:visible />
    <Skills client:visible />
    <Education client:visible />
	<Languages client:visible />
    <Projects client:visible />
  </div>
</Layout>

<script>
  // Pequeño script para detectar problemas de carga
  document.addEventListener('DOMContentLoaded', () => {
    console.log('CV content loaded');
    
    // Verificar que el header existe y es visible
    const header = document.getElementById('about');
    if (header) {
      console.log('Header found in DOM');
    } else {
      console.error('Header not found in DOM');
    }
  });
</script>