---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/cv/Hero';
import Experience from '../components/cv/Experience';
import Skills from '../components/cv/Skills';
import Languages from '../components/cv/Languages';
import Education from '../components/cv/Education';
import Projects from '../components/cv/Projects';

// This will be replaced by i18n values
const pageTitle = "Oriol Macias - CV";
const pageDescription = "Professional CV for Oriol Macias, Software Developer";
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="space-y-16">
    <!-- Hero section with personal info and summary -->
    <Hero client:load />
    
    <!-- Work Experience -->
    <Experience client:load />
    
    <!-- Technical Skills -->
    <Skills client:load />
    
    <!-- Languages -->
    <Languages client:load />
    
    <!-- Education and Certifications -->
    <Education client:load />
    
    <!-- Projects -->
    <Projects client:load />
  </div>
</Layout>