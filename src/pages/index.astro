---
import Layout from '../layouts/Layout.astro';
import Header from '../components/cv/Header';
import Experience from '../components/cv/Experience';
import Skills from '../components/cv/Skills';
import Languages from '../components/cv/Languages';
import Education from '../components/cv/Education';
import Projects from '../components/cv/Projects';

// Metadata de la página
const pageTitle = "Oriol Macias - CV";
const pageDescription = "Professional CV for Oriol Macias, Software Developer";
---

<Layout title={pageTitle} description={pageDescription}>
  <div id="cv-content" class="space-y-16">
    <!-- Header - Información personal -->
    <Header client:load />
    
    <!-- El resto de secciones se cargarán con client:visible para mejor rendimiento -->
    <Experience client:visible />
    <Skills client:visible />
    <Languages client:visible />
    <Education client:visible />
    <Projects client:visible />
  </div>
</Layout>