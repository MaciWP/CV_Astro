{
  "name": "oriol-macias-portfolio",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "generate-images": "node scripts/generate-profile-images.js",
    "dev": "node scripts/dev.js && npm run generate-images",
    "build": "node scripts/build.js && npm run generate-images",
    "preview": "astro preview",
    "analyze": "astro build --analyze",
    "check": "npm run check:contrast && npm run check:translations && npm run check:structured-data",
    "check:contrast": "node scripts/check-contrast.js",
    "check:translations": "node scripts/check-translations.js",
    "check:structured-data": "node scripts/validate-structured-data.js",
    "a11y": "npm run check:contrast",
    "a11y:audit": "lighthouse http://localhost:3000 --output-path=./lighthouse-report.html --view --chrome-flags=\"--headless\" --only-categories=accessibility",
    "clean": "rimraf dist .astro public/styles/font-awesome* public/styles/fonts",
    "lint": "eslint ."
  },
  "dependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/netlify": "^6.6.3",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.3.0",
    "@astrojs/tailwind": "^5.1.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@vite-pwa/astro": "^0.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "astro": "^5.16.3",
    "astro-compress": "^2.3.6",
    "astro-i18next": "^1.0.0-beta.21",
    "chalk": "^5.4.1",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "globby": "^14.1.0",
    "html2pdf.js": "^0.10.3",
    "i18next": "^24.2.3",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-http-backend": "^3.0.2",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "prettier": "^3.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.5",
    "react-i18next": "^15.4.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@astrojs/node": "^9.5.1",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/outfit": "^5.2.8",
    "@netlify/plugin-csp-nonce": "^1.6.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.5.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "wcag-contrast": "^3.0.0"
