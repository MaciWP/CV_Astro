{
  "name": "oriol-macias-portfolio",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/font-awesome-setup.js && node scripts/dev.js",
    "build": "node scripts/font-awesome-setup.js && node scripts/build.js",
    "preview": "astro preview",
    "analyze": "astro build --analyze",
    "styles": "node scripts/styles.js",
    "styles:optimize": "node scripts/styles.js --optimize",
    "setup:font-awesome": "node /public/scripts/font-awesome.js",
    "check": "npm run check:contrast && npm run check:translations",
    "check:contrast": "node scripts/check-contrast.js",
    "check:translations": "node scripts/check-translations.js",
    "a11y": "npm run check:contrast",
    "a11y:audit": "lighthouse http://localhost:3000 --output-path=./lighthouse-report.html --view --chrome-flags=\"--headless\" --only-categories=accessibility",
    "clean": "rimraf dist .astro public/styles/font-awesome* public/styles/fonts"
  },
  "dependencies": {
    "@astrojs/react": "^3.0.9",
    "@astrojs/sitemap": "^3.3.0",
    "@astrojs/tailwind": "^5.1.0",
    "@vite-pwa/astro": "^0.5.0",
    "@vitejs/plugin-react": "^4.2.1",
    "astro": "^5.5.2",
    "astro-compress": "^2.3.6",
    "astro-i18next": "^1.0.0-beta.21",
    "chalk": "^5.4.1",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "globby": "^14.1.0",
    "html2pdf.js": "^0.10.3",
    "i18next": "^24.2.3",
    "i18next-browser-languagedetector": "^8.0.4",
    "i18next-http-backend": "^3.0.2",
    "prettier": "^3.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^15.4.1",
    "rimraf": "^5.0.5",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "tailwindcss": "^3.4.1"
  },
  "overrides": {
    "@humanwhocodes/config-array": "@eslint/config-array",
    "@humanwhocodes/object-schema": "@eslint/object-schema",
    "rimraf": "^5.0.5"
  }
}